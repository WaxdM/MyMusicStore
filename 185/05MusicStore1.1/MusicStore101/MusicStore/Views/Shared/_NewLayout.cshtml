

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title -音乐商店</title>
    @*绑定样式库*@

    @Styles.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/JqueryUI")
    @Styles.Render("~/Content/css")

    @*绑定脚本库*@
    @Styles.Render("~/bundles/jquery")
    @Styles.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/JqueryUI")
    @Styles.Render("~/bundles/jqueryval")
</head>
<body>
        <div id="header">
            @*Logo和菜单*@
            <h1><a href="/">陈氏集团音乐商店</a></h1>
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="/">主页</a></li>
                <li><a href="/store">商店</a></li>
                <li><a href="/account/login">登陆</a></li>
            </ul>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @*左侧导航*@
                    @Html.Partial("_GetGenreMenu",new MusicStoreEntity.EntityDbContext().Genres.ToList())
                </div>
                <div class="col-md-9">
                    @*操作区*@
                    @RenderBody()
                </div>
            </div>
            <div class="row">
                <div class="col-md-12"></div>
                @*尾栏*@
                @Html.Partial("_FooterLayout")
            </div>
        </div>
     @*继承此布局页的页面执行脚本的位置*@
    @RenderSection("scripts", required: false);
</body>
</html>
